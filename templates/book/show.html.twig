{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-4xl font-bold mb-6 text-gray-800">Book</h1>

        <table class="table-auto w-full mb-6">
            <tbody>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-700">Id</th>
                    <td class="px-4 py-2 text-gray-900">{{ book.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-700">Title</th>
                    <td class="px-4 py-2 text-gray-900">{{ book.title }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-700">Resume</th>
                    <td class="px-4 py-2 text-gray-900">{{ book.resume }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-700">Date</th>
                    <td class="px-4 py-2 text-gray-900">{{ book.date ? book.date|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex space-x-4">
            <a href="{{ path('app_book_index') }}" class="inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-yellow-500">Back to list</a>
            <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-yellow-500">Edit</a>
            {{ include('book/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
